{
  "compilerOptions": {
    "target": "es2022", // или "es2021", "es2020" - достатъчно ново за await
    "module": "commonjs", // Стандартно за Node.js
    "outDir": "./dist", // Къде ще се компилират JS файловете
    "rootDir": "./src", // Откъде да чете TS файловете
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"], // Включи всички .ts файлове от src
  "exclude": ["node_modules"] // Изключи node_modules
}
